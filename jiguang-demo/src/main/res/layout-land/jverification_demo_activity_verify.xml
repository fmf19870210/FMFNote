<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/jverification_demo_verify_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/jverification_demo_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="极光认证"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_top_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="快速集成，一键认证，提高用户体验和验证安全性"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_top" />

    <TextView
        android:id="@+id/btn_auth"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/d_press_ripple"
        android:gravity="center"
        android:text="一键登录/view"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_top_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/btn_auth_dialog"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/d_press_ripple"
        android:gravity="center"
        android:text="一键登录/pop-up"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/btn_auth"
        app:layout_constraintRight_toRightOf="@id/btn_auth"
        app:layout_constraintTop_toBottomOf="@id/btn_auth" />

    <TextView
        android:id="@+id/btn_setting"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/d_press_ripple_other"
        android:gravity="center"
        android:text="获取 Token"
        android:textColor="#0084F6"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/btn_auth"
        app:layout_constraintRight_toRightOf="@id/btn_auth"
        app:layout_constraintTop_toBottomOf="@id/btn_auth_dialog" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/jverification_demo_main_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>