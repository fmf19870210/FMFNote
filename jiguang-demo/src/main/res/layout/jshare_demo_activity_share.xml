<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:scaleType="fitXY"
        android:src="@drawable/jshare_demo_share_main"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/jshare_demo_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="极光分享"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_back"
        app:layout_constraintTop_toBottomOf="@id/iv_back" />

    <TextView
        android:id="@+id/tv_top_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="提供应用社会化的桥梁"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_top"
        app:layout_constraintTop_toBottomOf="@id/tv_top" />

    <TextView
        android:id="@+id/tv_top_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="轻松实现社会化"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_top"
        app:layout_constraintTop_toBottomOf="@id/tv_top_2" />

    <View
        android:id="@+id/v_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="234dp"
        android:background="@drawable/jshare_demo_dialog_v_bg"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_share"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/d_press_ripple"
        android:gravity="center"
        android:text="分享场景还原"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_bg" />

    <TextView
        android:id="@+id/tv_auth"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/d_press_ripple"
        android:gravity="center"
        android:text="授权"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_share" />


    <TextView
        android:id="@+id/tv_self"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/d_press_ripple_other"
        android:gravity="center"
        android:text="获取用户信息"
        android:textColor="#0084F6"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_auth"
        app:layout_constraintRight_toRightOf="@id/tv_auth"
        app:layout_constraintTop_toBottomOf="@id/tv_auth" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/jshare_demo_main_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>