<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_img_bg">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/main_top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:text="极光认证"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="快速集成，一键认证，提高用户体验和验证安全性"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_layout_bottom"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_auth"
            style="@style/ButtonNormal"
            android:layout_marginTop="24dp"
            android:text="一键登录/全屏" />

        <Button
            android:id="@+id/btn_auth_dialog"
            style="@style/ButtonNormal"
            android:layout_marginTop="15dp"
            android:text="一键登录/弹窗" />

        <Button
            android:id="@+id/btn_setting"
            style="@style/ButtonNormal"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_btn_other"
            android:text="其他设置"
            android:textColor="#3A51FF" />

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_btn"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_gif" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:src="@drawable/main_logo" />
</RelativeLayout>